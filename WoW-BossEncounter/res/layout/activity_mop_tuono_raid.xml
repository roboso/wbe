<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_sfondoboss" >
    
  
 <ScrollView
        android:id="@+id/scrollViewtuono"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
          
            <ImageView
        android:id="@+id/imagetuono"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:src="@drawable/custom_regnodeltuono" />
            

 <ImageView
     android:id="@+id/jindemolitore"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/imagetuono"
     android:layout_centerHorizontal="true"
     android:src="@drawable/custom_jinrokildemolitore" />

 <ImageView
     android:id="@+id/horridonita"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@+id/jindemolitore"
     android:layout_below="@+id/jindemolitore"
     android:src="@drawable/custom_horridon" />

 <ImageView
     android:id="@+id/concilioanziani"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@+id/horridonita"
     android:layout_below="@+id/horridonita"
     android:src="@drawable/custom_conciliodeglianziani" />

 <ImageView
     android:id="@+id/tortosita"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@+id/concilioanziani"
     android:layout_below="@+id/concilioanziani"
     android:src="@drawable/custom_tortos" />

 <ImageView
     android:id="@+id/megaeraita"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@+id/tortosita"
     android:layout_below="@+id/tortosita"
     android:src="@drawable/custom_megaera" />
 
 
  <ImageView
     android:id="@+id/jikunita"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@+id/megaeraita"
     android:layout_below="@+id/megaeraita"
     android:src="@drawable/custom_jikun" />

   <ImageView
     android:id="@+id/ildimenticato"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@+id/jikunita"
     android:layout_below="@+id/jikunita"
     android:src="@drawable/custom_durumuildimenticato" />
   
   
   <ImageView
     android:id="@+id/primordius"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@+id/ildimenticato"
     android:layout_below="@+id/ildimenticato"
     android:src="@drawable/custom_primordius" />
   
   
   <ImageView
     android:id="@+id/animus"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@+id/primordius"
     android:layout_below="@+id/primordius"
     android:src="@drawable/custom_animusoscuro" />
   
   
   <ImageView
     android:id="@+id/iltenace"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@+id/animus"
     android:layout_below="@+id/animus"
     android:src="@drawable/custom_qoniltenace" />
   
   
   <ImageView
     android:id="@+id/consortigemelle"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@+id/iltenace"
     android:layout_below="@+id/iltenace"
     android:src="@drawable/custom_consortigemelle" />
   
   
   <ImageView
     android:id="@+id/leishen"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@+id/consortigemelle"
     android:layout_below="@+id/consortigemelle"
     android:src="@drawable/custom_leishen" />
  </LinearLayout>
    </ScrollView>
</RelativeLayout>
