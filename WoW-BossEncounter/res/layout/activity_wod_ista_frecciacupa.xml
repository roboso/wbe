<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

     <ImageView
        android:id="@+id/frecciacupa"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/custom_frecciacupa" />

     <Button
         android:id="@+id/tovra"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/frecciacupa"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="14dp"
         android:background="@drawable/custom_sfondoboss"
         android:drawableLeft="@drawable/custom_signoradelcielotovra"
         android:text="@string/tovra"
	     android:textColor="@color/oro" />

     <Button
         android:id="@+id/brillarazziborka"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/tovra"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="14dp"
         android:background="@drawable/custom_sfondoboss"
         android:drawableLeft="@drawable/custom_brillarazzieborka"
         android:text="@string/brillarazziborka"
	     android:textColor="@color/oro" />

     <Button
         android:id="@+id/nitrogg"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/brillarazziborka"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="14dp"
         android:background="@drawable/custom_sfondoboss"
         android:drawableLeft="@drawable/custom_nitrogtorretonante"
         android:text="@string/nitrogg"
	     android:textColor="@color/oro" />
     
</RelativeLayout>
