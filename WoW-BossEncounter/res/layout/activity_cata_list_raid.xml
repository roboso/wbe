<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

     <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

        <ImageView
            android:id="@+id/immaginecata"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/custom_cata" />

        <Button
            android:id="@+id/bdc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/immaginecata"
            android:layout_marginTop="14dp"
            android:background="@drawable/custom_sfondoboss"
            android:drawableTop="@drawable/custom_bastionedelcrepuscolo"
            android:onClick="startbastioneboss"
            android:text="@string/bdc"
            android:textColor="@color/indaco"
            android:textSize="25sp" />


        <Button
            android:id="@+id/tdqv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bdc"
            android:layout_marginTop="14dp"
            android:background="@drawable/custom_sfondoboss"
            android:drawableTop="@drawable/custom_tronodeiquattroventi"
            android:onClick="starttronoboss"
            android:text="@string/tdqv"
            android:textColor="@color/indaco"
            android:textSize="25sp" />
        <Button
            android:id="@+id/sdan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tdqv"
            android:layout_marginTop="14dp"
            android:background="@drawable/custom_sfondoboss"
            android:drawableTop="@drawable/custom_sotterraneidellalanera"
            android:onClick="startsotterraneiboss"
            android:text="@string/sdan"
            android:textColor="@color/indaco"
            android:textSize="25sp" />

        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sdan"
            android:layout_marginTop="14dp"
            android:background="@drawable/custom_sfondoboss"
            android:drawableTop="@drawable/custom_animadidrago"
            android:onClick="startanimaboss"
            android:text="@string/add"
            android:textColor="@color/indaco"
            android:textSize="25sp" />
            
     

    <Button
        android:id="@+id/tdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add"
        android:layout_marginTop="14dp"
        android:background="@drawable/custom_sfondoboss"
        android:drawableTop="@drawable/custom_terradelfuoco"
        android:onClick="startterreboss"
        android:text="@string/tdf"
        android:textColor="@color/indaco"
        android:textSize="25sp" />

</LinearLayout>
</ScrollView>
</RelativeLayout>