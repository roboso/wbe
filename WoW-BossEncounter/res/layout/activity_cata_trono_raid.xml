<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nero" >
 
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
    
  <ImageView
      android:id="@+id/imagetrono"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:adjustViewBounds="true"
      android:cropToPadding="false"
      android:scaleType="fitXY"
      android:src="@drawable/custom_tronodeiquattroventi" />

  <Button
      android:id="@+id/conclave"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_below="@+id/imagetrono"
      android:layout_marginTop="14dp"
      android:background="@drawable/custom_sfondoboss"
      android:drawableLeft="@drawable/custom_concilio"
      android:text="@string/conclave"
	  android:textColor="@color/oro" />

  <Button
      android:id="@+id/alakir"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/conclave"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="14dp"
      android:background="@drawable/custom_sfondoboss"
      android:drawableLeft="@drawable/custom_alakir"
      android:text="@string/alakir"
	  android:textColor="@color/oro" />

 
  </LinearLayout>
</ScrollView>
</RelativeLayout>
