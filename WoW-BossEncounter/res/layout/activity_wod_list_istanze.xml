<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/wodlistaraid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/custom_wod" />

    <Button
        android:id="@+id/auchindoun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wodlistaraid"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_sfondoboss"
        android:drawableTop="@drawable/custom_auchindoun"
        android:layout_marginTop="14dp"
        android:text="@string/auchindoun"
	    android:textColor="@color/indaco" />

    <Button
        android:id="@+id/roccianerasuperiori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/auchindoun"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/custom_sfondoboss"
        android:drawableTop="@drawable/custom_fonderia"
        android:text="@string/roccianerasuperiori"
	    android:textColor="@color/indaco" />

    <Button
        android:id="@+id/darsenaferro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roccianerasuperiori"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/custom_sfondoboss"
        android:drawableTop="@drawable/custom_darsenaferro"
        android:text="@string/darsenaferro"
	    android:textColor="@color/indaco" />

    <Button
        android:id="@+id/magliorosso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/darsenaferro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/custom_sfondoboss"
        android:drawableTop="@drawable/custom_magliorosso"
        android:text="@string/magliorosso"
	    android:textColor="@color/indaco" />

    <Button
        android:id="@+id/torvaluna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/magliorosso"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/custom_sfondoboss"
        android:drawableTop="@drawable/custom_torvaluna"
        android:text="@string/torvaluna"
	    android:textColor="@color/indaco" />

    <Button
        android:id="@+id/frecciacupa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/torvaluna"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/custom_sfondoboss"
        android:drawableTop="@drawable/custom_frecciacupa"
        android:text="@string/frecciacupa"
	    android:textColor="@color/indaco" />

    <Button
        android:id="@+id/verdeterno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frecciacupa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/custom_sfondoboss"
        android:drawableTop="@drawable/custom_verdeterno"
        android:text="@string/verdeterno"
	    android:textColor="@color/indaco" />

    <Button
        android:id="@+id/vistacieli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verdeterno"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/custom_sfondoboss"
        android:drawableTop="@drawable/custom_vistacieli"
        android:text="@string/vistacieli"
	    android:textColor="@color/indaco" />
    
</LinearLayout>
</ScrollView>
</RelativeLayout>

