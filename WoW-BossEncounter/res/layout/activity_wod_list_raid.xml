<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nero"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/wodlistaraid"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/custom_wod" />

    <Button
        android:id="@+id/altomaglio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wodlistaraid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/custom_sfondoboss"
        android:drawableLeft="@drawable/custom_altomaglio"
        android:onClick="startaltomaglio"
        android:text="@string/altomaglio"
        android:textColor="@color/oro" />

    <Button
        android:id="@+id/fonderia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/altomaglio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/custom_sfondoboss"
        android:drawableLeft="@drawable/custom_fonderia"
        android:onClick="startfornace"
        android:text="@string/altoforno"
        android:textColor="@color/oro" />
    
</RelativeLayout>
