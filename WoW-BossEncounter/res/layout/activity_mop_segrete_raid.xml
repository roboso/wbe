<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

     <ImageView
         android:id="@+id/imagesegrete"
         android:layout_width="match_parent"
         android:layout_height="150dp"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:adjustViewBounds="true"
         android:cropToPadding="false"
         android:scaleType="fitXY"
         android:src="@drawable/custom_segretemogushan" />

     <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
     
     
     <Button
         android:id="@+id/quilen"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/imagesegrete"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="14dp"
         android:background="@drawable/custom_sfondoboss"
         android:drawableLeft="@drawable/custom_quilen"
         android:text="@string/quilen"
         android:textColor="@color/oro" />

     <Button
         android:id="@+id/feng"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/quilen"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="14dp"
         android:background="@drawable/custom_sfondoboss"
         android:drawableLeft="@drawable/custom_fengmaledetto"
         android:text="@string/feng"
	     android:textColor="@color/oro" />

     <Button
         android:id="@+id/garajal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/feng"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="14dp"
         android:background="@drawable/custom_sfondoboss"
         android:drawableLeft="@drawable/custom_garajalvincolaspiriti"
         android:text="@string/garajal"
	     android:textColor="@color/oro" />

     <Button
         android:id="@+id/reggentispirituali"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/garajal"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="14dp"
         android:background="@drawable/custom_sfondoboss"
         android:drawableLeft="@drawable/custom_reggentispirituali"
         android:text="@string/reggenti"
	 	 android:textColor="@color/oro" />

     <Button
         android:id="@+id/elegon"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/reggentispirituali"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="14dp"
         android:background="@drawable/custom_sfondoboss"
         android:drawableLeft="@drawable/custom_elegon"
         android:text="@string/elegon"
	 	 android:textColor="@color/oro" />
     
     <Button
         android:id="@+id/volonta"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/elegon"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="14dp"
         android:background="@drawable/custom_sfondoboss"
         android:drawableLeft="@drawable/custom_volonta_dellimperatore"
         android:text="@string/volonta"
	 	 android:textColor="@color/oro" />
     
    
</LinearLayout>
</ScrollView>
</RelativeLayout>
     
