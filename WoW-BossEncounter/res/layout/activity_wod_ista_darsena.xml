<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
    <ImageView
        android:id="@+id/darsena"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/custom_darsenaferro" />

    <Button
        android:id="@+id/tranciacarne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/darsena"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/custom_sfondoboss"
        android:drawableLeft="@drawable/custom_tranciacarne"
        android:text="@string/tranciacarne"
	    android:textColor="@color/oro" />

    <Button
        android:id="@+id/scagnozzi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tranciacarne"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/custom_sfondoboss"
        android:drawableLeft="@drawable/custom_scagnozifrecciacupa"
        android:text="@string/scagnozzi"
	    android:textColor="@color/oro" />

    <Button
        android:id="@+id/oshir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scagnozzi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/custom_sfondoboss"
        android:drawableLeft="@drawable/custom_oshir"
        android:text="@string/oshir"
	    android:textColor="@color/oro" />

    <Button
        android:id="@+id/skulloc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oshir"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/custom_sfondoboss"
        android:drawableLeft="@drawable/custom_skullok"
        android:text="@string/skulloc"
	    android:textColor="@color/oro" />
 <Button
                android:id="@+id/inglese"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/skulloc"
                android:layout_marginTop="14dp"
                android:background="@drawable/lingua_italiana" />

    <Button
        android:id="@+id/italiano"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/inglese"
        android:layout_marginTop="14dp"
        android:background="@drawable/custom_bandiera_inglese" />
        </LinearLayout>

</ScrollView>

</RelativeLayout>
